<div class="list-group" id=<%= comment.id %> >
  <h4 class="list-group-item-heading"><strong>Author:</strong><%= comment.user.name %></h4>
  <p class="list-group-item-text"><strong>Rating:</strong><%= comment.raiting %></p>
  <p class="list-group-item-text"><strong>Comment: </strong><%= comment.text %></p>
  <%= link_to "Delete", picture_comment_path(comment.picture_id, comment.id), id: "comment-delete", remote: true, class: "btn btn-default",
              method: :delete,
              data: {confirm: "Do you want to delete this comment?"}
  %>
</div>